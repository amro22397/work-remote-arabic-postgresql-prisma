generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id String @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name String @unique
  email String @unique
  image String?
  hashedPassword String?
  
  resetPasswordToken String?
  resetPasswordExpires DateTime?
  isVerified Boolean? @default(false)
  verifyToken String?
  verifyTokenExpires DateTime?
}


model JobForm {
  id String @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  jobTitle String?
  jobType String?
  jobDuration String?
  isThereSalary Boolean?
  jobSalary Float?
  jobSalaryPer String?
  country String?
  state String?
  city String?
  jobPhoto String?
  jobFormLink String?
  wantEasyApply Boolean?
  isThereContact Boolean?
  currency String?
  contactPhoto String?
  contactName String?
  contactEmail String?
  contactNumber String?
  theOtherJobDuration String?
  description String?
  emailRef String?
}